<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/item_img_avatar_noradius"
            android:src="@drawable/menu_me_now" />

        <TextView
            android:id="@+id/account"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            android:text="楚留香"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/account"
            android:layout_alignLeft="@id/account"
            android:text="1小时前"/>

        <RelativeLayout
            android:id="@+id/comment_num_wrapper"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/avatar"
            android:layout_width="80dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/comment_num"
                android:layout_toLeftOf="@+id/comment_num"
                android:src="@drawable/icon_comment"/>

            <TextView
                android:id="@+id/comment_num"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="100"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/avatar"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="标题"/>

        <View
            android:id="@+id/divider"
            android:layout_below="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"
            />

        <TextView
            android:id="@+id/content"
            android:layout_below="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:layout_height="80dp"
            android:text="简介"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
