    <style name="RadioButtonBottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/topbar_color</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RadioButtonStatusDetailTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/txtsize_subhead</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/layerlist_tab_indicator_sel</item>
